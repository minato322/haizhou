<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haizhou.smarttax.mapper.ChatMessageMapper">
    
    <resultMap id="ChatMessageResultMap" type="com.haizhou.smarttax.entity.ChatMessage">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="senderType" column="sender_type"/>
        <result property="messageContent" column="message_content"/>
        <result property="isRead" column="is_read"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>
    
    <select id="findByUserId" resultMap="ChatMessageResultMap">
        SELECT * FROM chat_message WHERE user_id = #{userId} ORDER BY created_at ASC
    </select>
    
    <insert id="insert" parameterType="com.haizhou.smarttax.entity.ChatMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_message (user_id, sender_type, message_content, is_read)
        VALUES (#{userId}, #{senderType}, #{messageContent}, #{isRead})
    </insert>
    
    <update id="updateReadStatus">
        UPDATE chat_message SET is_read = #{isRead} WHERE id = #{id}
    </update>
    
</mapper>
