<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haizhou.smarttax.mapper.UserMapper">
    
    <resultMap id="UserResultMap" type="com.haizhou.smarttax.entity.User">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="companyName" column="company_name"/>
        <result property="phone" column="phone"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <select id="findById" resultMap="UserResultMap">
        SELECT * FROM user WHERE id = #{id}
    </select>
    
    <select id="findByEmail" resultMap="UserResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>
    
    <insert id="insert" parameterType="com.haizhou.smarttax.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (email, password, company_name, phone, status)
        VALUES (#{email}, #{password}, #{companyName}, #{phone}, #{status})
    </insert>
    
    <update id="update" parameterType="com.haizhou.smarttax.entity.User">
        UPDATE user
        <set>
            <if test="email != null">email = #{email},</if>
            <if test="password != null">password = #{password},</if>
            <if test="companyName != null">company_name = #{companyName},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM user WHERE id = #{id}
    </delete>
    
</mapper>
