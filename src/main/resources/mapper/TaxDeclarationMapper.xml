<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haizhou.smarttax.mapper.TaxDeclarationMapper">
    
    <resultMap id="TaxDeclarationResultMap" type="com.haizhou.smarttax.entity.TaxDeclaration">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="declarationType" column="declaration_type"/>
        <result property="amount" column="amount"/>
        <result property="taxAmount" column="tax_amount"/>
        <result property="currency" column="currency"/>
        <result property="status" column="status"/>
        <result property="declarationDate" column="declaration_date"/>
        <result property="auditDate" column="audit_date"/>
        <result property="remarks" column="remarks"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <select id="findById" resultMap="TaxDeclarationResultMap">
        SELECT * FROM tax_declaration WHERE id = #{id}
    </select>
    
    <select id="findByUserId" resultMap="TaxDeclarationResultMap">
        SELECT * FROM tax_declaration WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>
    
    <select id="findAll" resultMap="TaxDeclarationResultMap">
        SELECT * FROM tax_declaration ORDER BY created_at DESC
    </select>
    
    <insert id="insert" parameterType="com.haizhou.smarttax.entity.TaxDeclaration" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tax_declaration 
        (user_id, declaration_type, amount, tax_amount, currency, status, declaration_date, remarks)
        VALUES 
        (#{userId}, #{declarationType}, #{amount}, #{taxAmount}, #{currency}, #{status}, #{declarationDate}, #{remarks})
    </insert>
    
    <update id="update" parameterType="com.haizhou.smarttax.entity.TaxDeclaration">
        UPDATE tax_declaration
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="auditDate != null">audit_date = #{auditDate},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM tax_declaration WHERE id = #{id}
    </delete>
    
</mapper>
